<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardElevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#b1f2ed82">

        <LinearLayout android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView android:id="@+id/gm_event_message"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:drawableLeft="@android:drawable/btn_star_big_on"
                android:drawableStart="@android:drawable/btn_star_big_on"
                android:text="@string/hello_world"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:padding="8dp"
                android:drawablePadding="4dp"/>

        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView android:id="@+id/gm_event_datetime"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:drawableLeft="@android:drawable/ic_dialog_info"
                android:drawableStart="@android:drawable/ic_dialog_info"
                android:text="@string/hello_world"
                android:textAppearance="@android:style/TextAppearance.Holo.Medium"
                android:paddingEnd="@dimen/text_padding"
                android:paddingRight="@dimen/text_padding"
                android:drawablePadding="@dimen/text_padding"/>

            <TextView android:id="@+id/gm_event_duration"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="@string/hello_world"
                android:gravity="right"
                android:textAppearance="@android:style/TextAppearance.Holo.Medium"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
