<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_cpoll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_bar" />

    <TextView
        android:id="@+id/tv_cpoll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/text_size"
        android:text="@string/create_poll"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cpoll_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:text="@string/poll_title"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/et_cpoll_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Title Name"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cpoll_num_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:text="@string/number_of_answers"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/et_cpoll_num_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Num"
            android:inputType="number"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_cpoll_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/text_size"
        android:text="Create"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>
