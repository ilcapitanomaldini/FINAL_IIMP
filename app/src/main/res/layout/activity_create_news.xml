<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/app_bar" />

    <TextView
        android:id="@+id/tv_cnews_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/text_size"
        android:text="@string/create_news"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cnews_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:text="News Title"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/et_cnews_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Title Name"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cpoll_num_ans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:text="News Text"
            android:textSize="@dimen/text_size" />

        <EditText
            android:id="@+id/et_cnews_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Message Body"
            android:inputType="textMultiLine"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cnews_image_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/text_padding"
            android:text="Select Image"
            android:textSize="@dimen/text_size" />

        <Button
            android:id="@+id/bt_cnews_image_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Find Path"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_cnews_image_selected"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:padding="@dimen/text_padding"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bt_cnews_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/holo_orange_light"
        android:padding="@dimen/text_size"
        android:text="Create"
        android:textAllCaps="true"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</LinearLayout>