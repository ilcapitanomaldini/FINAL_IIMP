<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/ll_cpoll_main"
    android:theme="@android:style/Theme.Holo.Dialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textAllCaps="true"
        android:text="@string/poll_results"
        android:id="@+id/tv_pollr_title"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/text_size"/>
   <com.github.mikephil.charting.charts.PieChart android:layout_height="match_parent"
       android:layout_width="match_parent"
       android:id="@+id/pie_poll"
       android:layout_gravity="center_horizontal"
       android:padding="@dimen/text_padding">

   </com.github.mikephil.charting.charts.PieChart>
</LinearLayout>