<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#7a82f9d0">
    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
<TextView android:id="@+id/tv_poll_part_name"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="Poll Title"
    android:textAppearance="@android:style/TextAppearance.Holo.Large"
    android:gravity="center_horizontal"
    android:padding="@dimen/text_padding"/>

    <RadioGroup android:id="@+id/rg_poll_part" android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">

        <RadioButton android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:text="Answer"
            android:id="@+id/rb_pollpart_1"/>
        <RadioButton android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:text="Answer"
            android:id="@+id/rb_pollpart_2"/>
        <RadioButton android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:text="Answer"
            android:id="@+id/rb_pollpart_3"/>
        <RadioButton android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="4dp"
            android:text="Answer"
            android:id="@+id/rb_pollpart_4"/>

    </RadioGroup>


    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Select!"
        android:padding="@dimen/text_padding"
        android:id="@+id/bt_pollpart_select"
        android:layout_gravity="center"/>
    </LinearLayout>
</android.support.v7.widget.CardView>